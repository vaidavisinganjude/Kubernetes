PV
apiVersion: v1
kind: PersistentVolume
metadata:    
   name: mypv
spec:   
    capacity:      
      storage: 1Gi   
    accessModes:       
       - ReadWriteOnce   
    persistentVolumeReclaimPolicy: Retain   
    hostPpath:       
     path: /mydata

PVC
apiVersion: v1
kind: PersistentVolumeClaim
metadata:    
   name: mypvc
spec:   
     accessModes:       
        - ReadWriteOnce   
      resources:     
       requests:         
           storage: 1Gi
