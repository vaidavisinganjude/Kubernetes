apiVersion: batch/v1
kind: CronJob
metadata:  
  name: hellojob
spec: 
 schedule: "*/5 * * * *"  
 jobTemplate:   
  spec:   
   template:     
    metadata:         
     labels:           
      app: hello      
    spec:      
       containers:        
         - name: hello            
           image: busybox            
           command: ["echo","hello,k8s"]        
       restartPolicy: Never
